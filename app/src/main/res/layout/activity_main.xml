<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B97AFF"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45pt"
            android:background="#953C77"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Menu"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="#131C6B"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#953C77"
            android:orientation="vertical"
            android:padding="20dp"


            >


            <Button
                android:id="@+id/btnsuhu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#B97AFF"
                android:text="Konversi Suhu"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <Button
                android:id="@+id/btndiskon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#B97AFF"
                android:text="Diskon"

                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnluas"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#B97AFF"
                android:text="Bangun ruang"
                android:textColor="@color/white"

                android:textSize="18sp" />

            <Button
                android:id="@+id/ganjil"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#B97AFF"
                android:text="Ganjil or genap"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>